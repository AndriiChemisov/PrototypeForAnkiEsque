<UserControl x:Class="PrototypeForAnkiEsque.Views.FlashcardDatabaseUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PrototypeForAnkiEsque.Converters"
             Height="450" Width="800">

    <UserControl.Resources>
        <converters:EaseRatingToStringConverter x:Key="EaseRatingToStringConverter"/>
    </UserControl.Resources>

    <Grid>
        <!-- Navigation Button -->
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Command="{Binding OpenMainMenuCommand}"/>
        <Button Content="Create a new Flashcard" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Command="{Binding OpenFlashcardEntryCommand}"/>

        <!-- Search Bar -->
        <TextBox x:Name="SearchBox"
                 Width="300"
                 Height="20"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="0,50,0,0"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Search:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,52,0,0"/>

        <!-- DataGrid to show flashcards -->
        <DataGrid x:Name="FlashcardDataGrid" 
                  AutoGenerateColumns="False"  
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 90, 0, 50"
                  ItemsSource="{Binding Flashcards}"
                  SelectedItem="{Binding SelectedFlashcard, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Front" Binding="{Binding Front}" Width="*" />
                <DataGridTextColumn Header="Back" Binding="{Binding Back}" Width="*" />
                <DataGridTemplateColumn Header="Rating" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding EaseRating, Converter={StaticResource EaseRatingToStringConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination Buttons -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,10,0,20">
            <Button Content="Previous Page" Width="100" Margin="10" Command="{Binding PreviousPageCommand}" IsEnabled="{Binding CanGoToPreviousPage}"/>
            <Button Content="Next Page" Width="100" Margin="10" Command="{Binding NextPageCommand}" IsEnabled="{Binding CanGoToNextPage}"/>
        </StackPanel>

        <!-- Edit and Delete buttons -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Edit" Width="100" Margin="10" Command="{Binding EditCommand}"/>
            <Button Content="Delete" Width="100" Margin="10" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
