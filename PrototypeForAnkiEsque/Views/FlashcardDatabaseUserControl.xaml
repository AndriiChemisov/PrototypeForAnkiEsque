<UserControl x:Class="PrototypeForAnkiEsque.Views.FlashcardDatabaseUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PrototypeForAnkiEsque.Converters"
             Height="450" Width="800">
    
    <UserControl.Resources>
        <converters:EaseRatingToStringConverter x:Key="EaseRatingToStringConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <!-- Navigation Button -->
        <Button Content="Main Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Command="{Binding OpenMainMenuCommand}"/>

        <!-- DataGrid to show flashcards -->
        <DataGrid x:Name="FlashcardDataGrid" 
                  AutoGenerateColumns="False"  
                  CanUserAddRows="false"
                  IsReadOnly="True"
                  SelectionChanged="FlashcardDataGrid_SelectionChanged"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 60, 0, 50"
                  ItemsSource="{Binding Flashcards}">
            <!-- Define column for Front property -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Front" Binding="{Binding Front}" Width="*" />
                <DataGridTextColumn Header="Back" Binding="{Binding Back}" Width="*" />
                <DataGridTemplateColumn Header="Rating" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding EaseRating, Converter={StaticResource EaseRatingToStringConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- You can add more columns as necessary -->
            </DataGrid.Columns>
        </DataGrid>

        <!-- Edit and Delete buttons -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Edit" Width="100" Margin="10" Command="{Binding EditCommand}"/>
            <Button Content="Delete" Width="100" Margin="10" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
