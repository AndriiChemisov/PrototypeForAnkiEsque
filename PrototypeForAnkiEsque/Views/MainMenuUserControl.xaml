<UserControl x:Class="PrototypeForAnkiEsque.Views.MainMenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="200" Width="400">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Add Flashcard Button -->
            <Button Content="Add Flashcard" 
                    HorizontalAlignment="Stretch"
                    Width="150" Height="20"
                    Command="{Binding OpenFlashcardEntryViewCommand}" 
                    Margin="0,0,0,10" />

            <!-- Use Flashcards Button -->
            <Button Content="Use Flashcards" 
                    HorizontalAlignment="Stretch" 
                    Width="150" Height="20" 
                    Command="{Binding OpenFlashcardViewCommand}" 
                    Margin="0,0,0,10" />

            <!-- All Flashcards Button -->
            <Button Content="All Flashcards" 
                    HorizontalAlignment="Stretch" 
                    Width="150" Height="20" 
                    Command="{Binding OpenFlashcardDatabaseViewCommand}" 
                    Margin="0,0,0,10" />

            <!-- Deck Creator Button -->
            <Button Content="Create Deck" 
                    HorizontalAlignment="Stretch" 
                    Width="150" Height="20" 
                    Command="{Binding OpenFlashcardDeckCreatorViewCommand}" 
                    Margin="0,0,0,10" />
        </StackPanel>
    </Grid>
</UserControl>
